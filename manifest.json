{
  "manifest_version": 3,
  "name": "Roblox Community Wealth Tracker",
  "version": "1.0",
  "description": "Extract Roblox community IDs and track member wealth based on limited items",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.roblox.com/*",
    "https://economy.roblox.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Roblox Community Wealth Tracker",
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.roblox.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
}